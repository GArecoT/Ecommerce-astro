---
import Layout from '../layouts/Layout.astro';
import { baseURL, postJSON } from '../utils/networking';
if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const body = {
      product_name: data.get("name"),
      product_price: data.get("price"),
      product_description: data.get("description"),
      stock: data.get("stock"),
      image_dir: '/public/images/placeholder.jpg'
    }
    postJSON(body, "/api/postProduto")  
  } catch (error) {
      if (error instanceof Error) {
        console.error(error.message);
      }
    }


}
---
<Layout title="Admin">
  <div class="flex flex-col justify-center w-full items-center m-5">
    <form class="bg-base-200 p-10 rounded-2xl w-[90%] lg:w-2/3 flex-col items-center justify-center flex" method="POST">
      <h1 class="font-montserrat text-2xl text-primary">Add new product</h1>
      <div class="my-3 w-full flex">
        <div class="w-1/2 px-2">
          <h1 class="font-montserrat ps-2 my-1">Name</h1>
          <input required type="text" name="name" class="input input-bordered w-full"/>
        </div>
        <div class="w-1/2 px-2">
          <h1 class="font-montserrat ps-2 my-1">Stock</h1>
          <input required type="number" name="stock" class="input input-bordered w-full"/>
        </div>
        <div class="w-1/2 px-2">
          <h1 class="font-montserrat ps-2 my-1">Price</h1>
          <input required type="number" step=".01" name="price" class="input input-bordered w-full"/>
        </div>
      </div>
      <div class="w-full px-2">
        <h1 class="font-montserrat ps-2 my-1">Description</h1>
        <textarea class="textarea w-full" name="description"/>
      </div>
      <div class="my-5 w-full px-2">
        <h1 class="font-montserrat ps-2 my-1">Image</h1>
        <input type="file" name="image" class="file-input file-input-bordered w-full max-w-xs" />
      </div>
      <input type="submit" value="Cadastrar" class="btn btn-primary btn-wide mt-10"/>
    </form>
    </div>
</Layout>

